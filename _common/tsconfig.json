{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
        ],
        "moduleResolution": "node",
        "newLine": "LF",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noPropertyAccessFromIndexSignature": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./build",
        "paths": {
            "helpers-caching": [
                "./node_modules/helpers-caching/src"
            ],
            "helpers-exporting": [
                "./node_modules/helpers-exporting/src"
            ],
            "helpers-logging": [
                "./node_modules/helpers-logging/src"
            ],
            "helpers-triggering": [
                "./node_modules/helpers-triggering/src"
            ],
            "helpers-utilities": [
                "./node_modules/helpers-utilities/src"
            ]
        },
        "removeComments": true,
        "resolveJsonModule": true,
        "strict": true,
        "target": "ES2019",
        "types": [
            "google-apps-script",
            "node",
            "reflect-metadata"
        ]
    },
    "include": [
        "./src/**/*",
        "./node_modules/helpers-caching/src/**/*",
        "./node_modules/helpers-exporting/src/**/*",
        "./node_modules/helpers-logging/src/**/*",
        "./node_modules/helpers-triggering/src/**/*",
        "./node_modules/helpers-utilities/src/**/*"
    ]
}
